<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="#ffffff"
                />
            <stroke
                android:width="3dp"
                android:color="#000000" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="100dp"
                android:height="100dp"
                />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:radius="100dp"
            />
        <solid
            android:color="#ffffff"
            />
        <stroke
            android:width="4dp"
            android:color="#000000" />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="80dp"
            android:height="80dp"/>
        </shape>
        </item>
</selector>
